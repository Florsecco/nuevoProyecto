<!DOCTYPE html>
<html>
  <%- include('./partials/head') %>
  <body>
    <!-- Navbar (sit on top) -->
    <%- include('./partials/navbar') %>
    <!-- Header -->
    <%- include('./partials/header') %>
    <!-- Page content -->
    <div class="ps-content">

      <!-- Menu Section -->
      <div class="ps-row ps-padding-64" id="menu">
        <div class="ps-col l6 ps-padding-large">
          <% const platoEncontrado = listaPlatos.find((plato) => plato.id == idBuscado) %>
          <% if (platoEncontrado) { %>
            <h1 class="ps-center"> <%= platoEncontrado.nombre %></h1>
            <br />
            <h4> <%= platoEncontrado.descripcion %> </h4>
            <p class="ps-text-grey">
              <%= platoEncontrado.precio %>
            </p>  
          <% } else { %>
            <h1>Plato Tipico</h1>
          <% } %> 
        </div>  
        <div class="ps-col l6 ps-padding-large ps-img-menu">
          <img
            src="/images/<%= platoEncontrado.img %>"               
            class="ps-round ps-image ps-opacity-min"
            alt="Menu"
          />
        </div>
      </div>

      <!-- Footer -->
      <%- include('./partials/footer') %>
    </div>
  </body>
</html>
